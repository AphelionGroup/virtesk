# System Imports
import traceback
import logging
import sys

# Project imports
import rhev_manager
import utils

try:
    description = """Deletes all VMs in a virtual room."""

    manager, room = rhev_manager.RhevManager.construct_from_cmdargs(
        description
    )

    manager.cleanup_classroom(room)

    manager.cleanup()

except utils.Failure as f:
    logging.error(f.msg)
    sys.exit(-1)
except Exception as ex:
    logging.exception("Unexpected error: {0}".format(ex))
    logging.exception(traceback.format_exc())
    sys.exit(-1)
